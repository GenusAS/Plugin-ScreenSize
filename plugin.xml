<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.genus.ScreenSize"
    version="0.0.1">

    <name>Android Screensize</name>
    <description>Returns the physical screen size (diameter)</description>
    <author>Genus AS</author>
    <license>Apache 2.0 License</license>

    <asset src="www/screenSize.js" target="screenSize.js" />

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/cordova/plugins">
            <plugin name="ScreenSize"
                value="com.genus.ScreenSize"/>
        </config-file>
       
        <source-file src="src/android/ScreenSize.java"
                target-dir="src/org/apache/cordova/plugins" />
    </platform>
</plugin>